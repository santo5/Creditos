@model Creditos.API.Models.CreditoViewModel

<div class="row">
    <div class="col-md-6">
        <div class="form-group">
            <label asp-for="NombreId" class="control-label"></label>
            <select asp-for="NombreId" asp-items="Model.Nombres" class="form-control"></select>
            <span asp-validation-for="NombreId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="CobroId" class="control-label"></label>
            <select asp-for="CobroId" asp-items="Model.Cobros" class="form-control"></select>
            <span asp-validation-for="CobroId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Fecha" class="control-label"></label>
            <input asp-for="Fecha" class="form-control" />
            <span asp-validation-for="Fecha" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Valor" class="control-label"></label>
            <input asp-for="Valor" class="form-control" />
            <span asp-validation-for="Valor" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Verificacion" class="control-label"></label>
            <input asp-for="Verificacion" class="form-control" />
            <span asp-validation-for="Verificacion" class="text-danger"></span>
        </div>
    </div>
</div>
